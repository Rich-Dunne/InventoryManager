<UserControl x:Class="InventoryManager.Views.ModifyPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <DockPanel LastChildFill="True">
                                <TextBlock DockPanel.Dock="Right" 
                                    Foreground="Red"
                                    Margin="5 0 0 0"
                                    FontSize="10pt"
                                    VerticalAlignment="Center"
                                    Text="{Binding ErrorContent}"/>
                                <Border BorderBrush="Red" BorderThickness="1">
                                    <AdornedElementPlaceholder />
                                </Border>
                            </DockPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- Row 2 -->
        <Label Grid.Column="1" Grid.Row="2" 
               FontSize="20" FontWeight="Bold" 
               Content="Inventory Manager - Modify Part"/>

        <!-- Row 4 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="3"
                    Margin="20 0 0 0">
            <Label  Content="Source" />
            <StackPanel Orientation="Vertical"
                        Margin="55 0 0 0">
                <RadioButton Content="In-house"
                             x:Name="rbInHouse"
                             IsChecked="{Binding IsInHousePart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <RadioButton Content="Outsourced"
                             Margin="0 10 0 10"
                             x:Name="rbOutsourced"
                             IsChecked="{Binding IsOutsourcedPart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </StackPanel>

        <!-- Row 5 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="4"
                    Margin="20 0 0 0">
            <Label  Content="Part ID" />
            <TextBox Width="100" Height="20" 
                 Margin="55 0 0 0" 
                 IsEnabled="false"
                 Text="{Binding PartID, Mode=OneWay}" />
        </StackPanel>

        <!-- Row 6 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="5"
                    Margin="20 0 0 0">
            <Label HorizontalAlignment="Left" Content="Name" />
            <TextBox
                 Width="100" Height="20" 
                 Margin="59 0 0 0"
                 Text="{Binding PartName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Row 7 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="6">
            <Label Margin="20 0 0 0" Content="Inventory" />
            <TextBox
                 Width="100" Height="20"
                 Margin="41 0 0 0"
                 PreviewTextInput="PreviewIntInput"
                 DataObject.Pasting="TextBox_IntPasting"
                 Text="{Binding PartInventory, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Row 8 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="7"
                    Margin="20 0 0 0">
            <Label Content="Price" />
            <TextBox
                 Width="100" Height="20"
                 Margin="65 0 0 0"
                 DataObject.Pasting="TextBox_PricePasting"
                 Text="{Binding PartPrice, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Row 9 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="8"
                    Margin="20 0 0 0">
            <Label Content="Min" />
            <TextBox
                 Width="100" Height="20"
                 Margin="71 0 0 0"
                 PreviewTextInput="PreviewIntInput"
                 DataObject.Pasting="TextBox_IntPasting"
                 Text="{Binding PartMin, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Row 10 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="9"
                    Margin="20 0 0 0">
            <Label Content="Max" />
            <TextBox
                 Width="100" Height="20"
                 Margin="69 0 0 0"
                 PreviewTextInput="PreviewIntInput"
                 DataObject.Pasting="TextBox_IntPasting"
                 Text="{Binding PartMax, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Row 11 -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1" Grid.Row="10"
                    Margin="20 0 0 0">
            <Grid>
                <Label Content="Company Name"
                       Visibility="{Binding ElementName=rbOutsourced, Path=IsChecked, Converter={StaticResource BooleanConverter}}"/>

                <Label Content="Machine ID"
                       Visibility="{Binding ElementName=rbInHouse, Path=IsChecked, Converter={StaticResource BooleanConverter}}"/>
            </Grid>

            <Grid>
                <TextBox
                    Width="100" Height="20"
                    Margin="31,3,0,3"
                    PreviewTextInput="PreviewIntInput"
                    DataObject.Pasting="TextBox_IntPasting"
                    Text="{Binding MachineID, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="{Binding ElementName=rbInHouse, Path=IsChecked, Converter={StaticResource BooleanConverter}}"/>

                <TextBox
                    Width="100" Height="20"
                    Margin="5,3,0,3"
                    Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="{Binding ElementName=rbOutsourced, Path=IsChecked, Converter={StaticResource BooleanConverter}}"/>
            </Grid>
        </StackPanel>

        <!-- Row 12 -->

        <StackPanel Orientation="Horizontal" 
                    Grid.Column="1"
                    Grid.Row="11"
                    Margin="0 5"
                    HorizontalAlignment="Center">
            <Button
                Padding="5"
                Margin="5 0 0 0"
                Content="Cancel"
                Command="{Binding NavigateHomeCommand}"/>

            <Button
                Padding="5"
                Margin="5 0 0 0"
                Content="Save"
                IsEnabled="{Binding EnableSave}"
                Command="{Binding SaveModifiedPartCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
